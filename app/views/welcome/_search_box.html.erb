<!-- search -->
<div class="search">
  <!-- search-holder -->
  <div class="search-holder">
    <% form_tag(search_url) do %>
      <fieldset>
        <%= text_field_tag 'search_terms', (params[:search_terms] || 'search terms'), :class => 'text' %>
        <%= text_field_tag 'location', (params[:location] || 'city, state or zip'), :class => 'text' %>
       <%= image_submit_tag "/images/btn-search.gif", :class => 'button', :alt => 'Search' %>
      </fieldset>
    <% end %>
  </div>
</div>
