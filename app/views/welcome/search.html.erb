<% title params[:search_terms] + " near " + params[:location] %>
<% footer_additions 'jmapping' %>
<%= render :partial => 'search_box' %>
<!-- nav -->
<p class="filter-results">Filter these results:</p>
<%= render :partial => 'nav', :locals =>  { :is_search => true } %>
						<!-- wrap -->
						<div class="wrap">
							<!-- content -->
							<div id="content">
								<!-- content-holder -->
								<div class="content-holder">
									<!-- content-frame -->
									<div class="content-frame">
										<h2>Search Results</h2>
										<!-- search-results -->
										<div class="search-results">
											<strong class="title">Results for &quot;<%= params[:search_terms] %>&quot; near <span><%= params[:location] %></span></strong>
											<% if @offers.empty? %>
												We couldn't find any deals for your search. You can search again or go back to <%= link_to 'my deals', mydeals_url %>.
											<% else %>
												<%= render :partial => 'search_offer', :collection => @offers %>
											<% end%>
										</div>
									</div>
								</div>
							</div>
							<!-- aside -->
							<div class="aside">
								<div class="map-holder">
									<div id="map"></div>
									<div id="map-side-bar">
										<% @offers.each do |offer| %>
										<%= render :partial => 'map_business', :collection => offer.businesses %>
										<% end %>
									</div>
								</div>
							</div>
						</div>
