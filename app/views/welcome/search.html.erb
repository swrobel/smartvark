<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>smartvark - search results</title>
        <%= render :partial => 'common_header' %>
</head>
<body>
	<!-- wrapper -->
	<div id="wrapper">
		<!-- wrapper-holder -->
		<div class="wrapper-holder">
			<!-- header -->
			<div id="header">
				<!-- logo -->
                                <h1 class="logo"><a href="/">Smartvark</a></h1>
                                <%= render :partial => 'login' %>
			</div>
			<!-- main -->
			<div id="main">
				<!-- main-holder -->
				<div class="main-holder">
					<!-- main-frame -->
                                        <div class="main-frame">
                                          <%= render :partial => 'search_box' %>
                                          <!-- nav -->
                                          <%= render :partial => 'nav', :locals =>  { :is_search => true } %>
						<!-- wrap -->
						<div class="wrap">
							<!-- content -->
							<div id="content">
								<!-- content-holder -->
								<div class="content-holder">
									<!-- content-frame -->
									<div class="content-frame">
										<h2>Search Results</h2>
										<!-- search-results -->
										<div class="search-results">
                                                                                  <strong class="title"><%=h params[:search_terms] %> - <span><%=h params[:location] %></span></strong>
                                                                                  <% if @offers.empty? %>
                                                                                    Zero offers found for this search criteria
                                                                                  <% else %>
                                                                                    <%= render :partial => 'search_offer', :collection => @offers %>
                                                                                  <% end%>
										</div>
									</div>
								</div>
							</div>
							<!-- aside -->
							<div class="aside">
								<div class="map-holder">
									<a href="http://www.codemyconcept.com/projects/155/search-results.html#"><img src="images/img04.gif" alt="image" /></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
