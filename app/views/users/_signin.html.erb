<div id="signin-popup" class="popup">
  <%= form_for :user, :as => :user, :url => session_path(:user) do |f| %>
    <fieldset>
      <h3>Sign in</h3>
      <div class="popup-row">
	<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
      </div>
      <div class="popup-row">
      	<%= f.label :email, "email" %>
      	<%= f.text_field :email, :class => 'txt', :placeholder => 'email' %>
      </div>
      <div class="popup-row">
      	<%= f.label :password %>
      	<%= f.password_field :password, :class => 'txt', :placeholder => 'password' %>
      </div>
      <div class="remember">
        <%= f.check_box :remember_me, :class => 'chk' %><%= f.label :remember_me %>
      </div>
      <div class="popup-buttons">
        <%= f.submit "Sign in", :class => 'btn-signin' %>
        <input class="btn-signin-cancel simplemodal-close" type="submit" value="Cancel" />
      </div>
	  <div class="popup-buttons">
        <a href="#" id="signup-from-signin">Don't have an account? Sign up!</a>
      </div>
    </fieldset>
  <% end %>
</div>
