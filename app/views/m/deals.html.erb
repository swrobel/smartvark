
<div data-role="page">

	<div data-role="header" data-theme="b">
	  <a href="/m/mypicks" data-icon="star">My Picks</a>
		<h1>Artie's Picks</h1>
		<a href="/m/search" data-icon="search-white" data-transition="pop" class="ui-btn-right">Search</a>
	</div><!-- /header -->

	<div data-role="content">
	  <div data-role="collapsible" data-collapsed="true" id="list-header">
            <h3>Deals near <%= cookies[:location] %></h3>
	    <label for="location" class="select">I'm actually looking for deals near...</label>
            <%= form_tag do %>
              <%= text_field_tag 'location', nil, :placeholder => "city, state or zip" %>
              <button type="submit" data-theme="d">Update</button>
            <% end %>
	  </div>
          <ul data-role="listview" data-theme="d">
            <%= render :partial => 'offers', :collection => @offers %>
          </ul>
	</div><!-- /content -->
</div><!-- /page -->

