<div data-role="content" data-theme="a">
  <h3>Search for deals</h3>
  <%= form_tag(search_path(1), :method => :get) do %>
    <label for="search_terms">Search For:</label>
    <%= text_field_tag 'search_terms', params[:search_terms], :placeholder => 'search terms' %>
    <label for="location">Location:</label>
    <%= text_field_tag 'location', params[:location], :placeholder => 'city, state or zip' %>

    <fieldset class="ui-grid-a">
      <div class="ui-block-a"><button type="submit" data-theme="a">Search</button></div>
      <div class="ui-block-b"><a href='#' data-rel="back" data-role="button" data-theme="d">Cancel</a></div>
    </fieldset>
  <% end %>
</div><!-- /content -->
