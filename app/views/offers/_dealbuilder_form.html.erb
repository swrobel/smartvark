<%= form_for(@offer,  :html => {:multipart => true}) do |f| %>
<fieldset>
  <div class="offer-form">
    <%= f.error_messages %>
    <div class="row">
      <%= f.label :offer_type_id, :class => :width1 %>
      <%= f.select :offer_type_id, options_from_collection_for_select(OfferType.all, :id, :name, @offer.offer_type_id), { :include_blank => true }, {:class => :sel, :onchange => "$('##{@offer.id}_type').html($('#offer_offer_type option:selected').text());$('##{@offer.id}_type').removeClass();$('##{@offer.id}_type').addClass('c_'+$('#offer_offer_type option:selected').text())"} %>
      <div class="caption two-lines">
        <span>Deals: sales, happy hours specials and other non-coupons Events: infrequent special promotions (ex: loyal shopper party)</span>
      </div>
    </div>
    <div class="row">
      <%= f.label :category_id, :class => :width1 %>
      <%= render :partial => 'categories/category_selector', :object => @offer.category %>
      <%= f.hidden_field :category_id %>
    </div>
    <div class="row">
      <%= f.label :start_date %>
      <%= f.text_field :start_date, :format => :us_date, :class => 'txt' %>
      <div class="caption">
        <span>Date deal becomes active</span>
      </div>
    </div>
    <div class="row">
      <%= f.label :end_date %>
      <%= f.text_field :end_date, :format => :us_date, :class => 'txt' %>
      <div class="caption">
        <span>Date deal expires (end of day)</span>
      </div>
    </div>
  </div><!-- /offer-form end -->

    <div class="text-box text1">
      <div class="title">
        <h3>Title of Offer (<span id="offer_title_count">50 character maximum</span>)</h3>
      </div>
      <div class="text text2">
        <%= f.text_area :title, :onchange => "$('##{@offer.id}_title').html($('#offer_title').val())", :placeholder => "Example: Save 50% on any full-price item" %>
      </div>
    </div><!-- /text-box end -->
    <div class="text-box">
      <div class="title">
        <h3>Details of Offer (<span id="offer_description_count">200 character maximum</span>)</h3>
      </div>
      <div class="text text1">
          <%= f.text_area :description, :onchange => "$('##{@offer.id}_diz').html($('#offer_description').val())", :placeholder => "Example: You'll find a wide variety of fashions in stock to get you ready for the season!" %>
      </div>
    </div><!-- /text-box end -->
    <div class="text-box">
      <div class="title">
        <h3>Fine Print (<span id="offer_fine_print_count">200 character maximum</span>)</h3>
      </div>
      <div class="text text1">
          <%= f.text_area :fine_print, :placeholder => "Example: Not valid with any other offer. Not valid on already marked-down items." %>
      </div>
    </div><!-- /text-box end -->
    <div class="text-box">
      <div class="title">
        <h3>Valid at the following locations</h3>
      </div>
      <div class="text">
        <div class="options-form">
          <ul class="options">
              <li id='biz_true'>
                <a href="" onClick="checkall_offer_form(true);return false">Select All </a>
              </li>
              <li id='biz_false'>
                <a href="" onClick="checkall_offer_form(false);return false;">Select None</a>
              </li>
            </ul>
  <% @businesses.in_groups_of(4) do |group| %>
  <ul class="row">
  <% group.compact.each do |business| %>
    <li>
      <label>
        <%= check_box_tag 'offer[business_ids][]', business.id, @offer.new_record? ? true : @offer.business_ids.include?(business.id), :class => 'chk location_chk' %>
        <%= business.short_or_name %>
      </label>
    </li>
  <% end %>
  </ul>
  <% end %>
      </div><!-- /options-form end -->
    </div>
  </div><!-- /text-box end -->

  <div class='form1'>
    <div class="row">
      <div class="left">
        <%= f.label :redemption_code %>
        <%= f.text_field :redemption_code, :class => :txt, :onchange => "$('##{@offer.id}_rc').html($('#offer_redemption_code').val())", :placeholder => "Ex: HALFOFFTUES" %>
      </div>
      <div class="right">
        <span>Code for tracking this deal in your system</span>
      </div>
    </div>
    <div class="row">
      <div class="left">
        <%= f.label :redemption_limit %>
        <%= f.text_field :redemption_limit, :class => 'txt w1' %>
      </div>
      <div class="right">
        <span>Maximum number of redemptions - blank for unlimited</span>
      </div>
    </div>
    <div class="row check">
      <div class="left">
        <%= f.check_box :allow_print, :class => :chk %>
        <%= f.label :allow_print %>
      </div>
      <div class="right">
        <span>Allow redemptions from a computer printout</span>
      </div>
    </div>
    <div class="row check">
      <div class="left">
          <%= f.check_box :allow_mobile, :class => :chk %>
          <%= f.label :allow_mobile %>
      </div>
      <div class="right">
        <span>Allow redemptions from a mobile phone screen</span>
      </div>
    </div>
    <%= f.hidden_field :draft %>
    <div class="btns-holder">
    <div class="center">
      <ul class="btns">
        <li><%= link_to_function "Activate Deal", "$('#offer_draft').val('false');$('form:first').submit();return false;", :class => 'activate-deal' %></li>
        <li><%= link_to_function "Save as Draft", "$('#offer_draft').val('true');$('form:first').submit();return false;", :class => 'save-draft' %></li>
        <li><%= link_to_function 'cancel', "if (confirm('Are you sure?')) { window.location.href='#{dealdashboard_url}';return true; } else { return false; }", :class => 'cancel' %></li>
    </ul><!-- /btns end -->
    </div>
  </div><!-- /btns-holder end -->
</div><!-- /form1 end -->
</fieldset>
<% end %>
