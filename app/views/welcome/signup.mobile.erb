<div data-role="content" data-theme="a">
  <h3>Sign Up</h3>
  <%= form_for :user, :as => :user, :url => registration_path(:user) do |f| %>
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => 'facebook-signin' %><br/><br/>
    <label for="email">Email:</label>
    <%= f.text_field :email, :id => 'email', :placeholder => 'email adress' %>
    <label for="password">Password:</label>
    <%= f.password_field :password, :placeholder => 'password' %>
    <label for="password_confirmation">Re-enter Password:</label>
    <%= f.password_field :password_confirmation, :placeholder => 're-enter password' %>
    <fieldset class="ui-grid-a">
      <div class="ui-block-a">
        <%= f.submit "Sign up", :'data-theme' => 'a' %>
      </div>
      <div class="ui-block-b">
        <a href='#' data-rel="back" data-role="button" data-theme="d">Cancel</a>
      </div>
    </fieldset>
  <% end %>
</div><!-- /content -->