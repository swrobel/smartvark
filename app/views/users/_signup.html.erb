  <a href="" id="btn-signup-open" class="btn-signup-open">New user</a>
  <div id='signup-popup' class="popup">
    <%= form_for :user, :as => :user, :url => registration_path(:user) do |f| %>
      <fieldset>
        <h3>Sign up</h3>
        <div class="popup-row">
          <p>To use the deals you've collected, you need to create an account.</p>
          <p>Don't worry, we won't give your personal info away.</p>
        </div>
        <div id="facebook-area">
          <div class="popup-row">
            <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "facebook-signin white", :title => "We don't get your login details from Facebook, we only confirm that you are who you say you are" %>
          </div>
          <div class="popup-row">
            <p><a href="#" onClick="$('#facebook-area').hide('drop',{ direction:'up'});$('#form-area').show('drop',{ direction:'up'});return false;">Don't have Facebook? Click here.</a></p>
          </div>
        </div>
        <div id="form-area" style="display:none;">
          <div class="popup-row">
            <%= f.label :email, "email" %>
            <%= f.text_field :email, :class => 'txt', :placeholder => 'must be a valid e-mail address' %>
          </div>
          <div class="popup-row">
            <%= f.label :password, "password" %>
            <%= f.password_field :password, :class => 'txt', :placeholder => 'minimum of 6 characters' %>
          </div>
          <div class="popup-row">
            <%= f.label :password_confirmation, "re-enter password" %>
            <%= f.password_field :password_confirmation, :class => 'txt', :placeholder => 'must match the previous field' %>
          </div>
          <div class="popup-buttons">
            <%= f.submit "Sign up", :class => 'btn-signup' %>
            <input class="btn-signin-cancel simplemodal-close" type="submit" value="Cancel" />
          </div>
        </div>
        <p><a href="#" id="signin-from-signup">Already have an account? Sign in!</a></p>
      </fieldset>
    <% end %>
  </div>
