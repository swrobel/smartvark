<div data-role="header" data-theme="b">
  <div align="center"><img src="/images/logo-mobile.png"/></div>
</div><!-- /header -->

<div data-role="content">
  <h3>You're on the priority list!</h3>
  <%= render :partial => "new_copy" %>
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, class: "txt", placeholder: "Email address to invite" %>
    <%= f.submit "Send the email invitation", class: "submit" %>
  <% end %>
  <% referral_url = root_url + current_user.id.to_s(36) %>
  <p>Post your invite link to social networks</p>
  <fb:like href="<%= referral_url %>" layout="button_count" show_faces="false" action="recommend" send="true" font=""></fb:like>
  <a href="http://twitter.com/share" class="twitter-share-button" data-text="Tired of getting spammed with local deals you don't want? Check out @Smartvark: Local Deals. Personalized." data-url="<%= referral_url %>" data-count="none">Tweet</a>
</div><!-- /content -->

<% content_for(:footer_additions) do %>
  <%= javascript_include_tag "http://platform.twitter.com/widgets.js", "http://connect.facebook.net/en_US/all.js#xfbml=1" %>
<% end %>