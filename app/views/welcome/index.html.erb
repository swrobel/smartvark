<% content_for :title, "Local Deals. Personalized." %>

<div class="wide-box business-box">
	<div class="holder">
		<div class="frame">
			<h2>Smartvark is a new twist on local deals</h2>
			<div class="business-holder">
        <div class="col-r-wide">
          <%= form_for :user do |f| %>
            <div class="row">
              <%= link_to "Connect with Facebook", user_omniauth_authorize_path(:facebook), :class => "facebook-signin-big", :title => "We don't get your login details from Facebook, we only confirm that you are who you say you are", onclick: 'javascript:alert("Sorry, we aren\'t accepting new registrations at this time");return false;' %>
            </div>
            <div class="row">
              <p>or create a Smartvark account</p>
            </div>
            <div class="row">
              <%= f.email_field :email, class: "txt", placeholder: "Sorry, we're closed!" %>
              <%= f.submit "Sign up", class: "submit", disabled: "disabled" %>
            </div>
						<div class="row">
              <p class="bottom-row">by signing up you indicate that you accept our <%= link_to "terms of service", terms_path, id: "show-terms" %> and <%= link_to "privacy policy", privacy_path, id: "show-privacy" %></p>
            </div>
          <% end %>
        </div>
        <div class="intro-text">
          <%= render :partial => "index_copy" %>
          <p><%= link_to "Preview deals in your area before you sign up", deals_path %></p>
					<p>Watch this video to find out more:</p>
        </div>
        <div style="clear:both;"></div>
			</div><!-- business-holder end -->
		</div>
	</div>
</div><!-- business-box end -->
<div id="terms-popup" class="popup contract-popup">
	<h3>Terms of Service</h3>
	<%= render partial: "terms_of_service" %>
</div>
<div id="privacy-popup" class="popup contract-popup">
	<h3>Privacy Policy</h3>
	<%= render partial: "privacy_policy" %>
</div>
