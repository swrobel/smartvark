<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>Smartvark</title>
  <%= render :partial => 'common_header' %>
</head>
<body>
	<!-- wrapper -->
	<div id="wrapper">
		<!-- wrapper-holder -->
		<div class="wrapper-holder">
			<!-- header -->
			<div id="header">
				<!-- logo -->
				<h1 class="logo"><a href="/">Smartvark</a></h1>
				<!-- sign-in popup-holder -->
        <%= render :partial => 'login' %>
			</div>
			<!-- main -->
			<div id="main">
				<!-- main-holder -->
				<div class="main-holder">
					<!-- main-frame -->
					<div class="main-frame">
            <%= render :partial => 'search_box' %>
						<!-- wrap -->
						<div class="merchant-area">
							<!-- content -->
							<div id="content">
								<!-- content-holder -->
								<div class="content-holder">
									<!-- content-frame -->
									<div class="content-frame">
                                                                          <h2><%=h @business.name %> - <%=h @business.city %></h2>
										<!-- info -->
										<div class="info">
											<div class="contact">
                                                                                          <ul class="rate">
                                                                                            <% if @business.yelp_avg_rating_url.present? %>
                                                                                              <%= image_tag @business.yelp_avg_rating_url %>
                                                                                            <% end %>
                                                                                          </ul>
                                                                                                <address><strong><%= @business.street_address_1 %></strong><strong><%= @business.city %>, <%= @business.state %> <%= @business.postal_code %></strong></address>
                                                                                                <strong class="phone"><%= @business.phone_1 %></strong>
                                                                                                <% if @business.url.present? %>
                                                                                                  <%= link_to @business.url, {}, :href => "http://#{@business.url}" %>
                                                                                                <% end %>
												<ul class="social">
                                                                                                  <li>
                                                                                                  <% if @business.twitter_link.present? %>
                                                                                                    <%= link_to image_tag('ico-twitter2.gif', :alt => 'twitter', :width => '23', :height => '24'),{},  { :href => @business.twitter_link, :target => :_new } %>
                                                                                                  <% end %>
                                                                                                  </li>
                                                                                                  <li>
                                                                                                  <% if @business.facebook_link.present? %>
                                                                                                    <%= link_to image_tag('ico-facebook2.gif', :alt => 'facebook', :width => '23', :height => '24'), {}, { :href => @business.facebook_link, :target => :_new } %>
                                                                                                  <% end %>
                                                                                                  </li>
                                                                                                  <li>
                                                                                                  <% if @business.yelp_url.present? %>
                                                                                                    <%= link_to image_tag('ico-yelp.gif', :alt => 'yelp', :width => '23', :height => '24'), {}, { :href => @business.yelp_link, :target => :_new } %>
                                                                                                  <% end %>
                                                                                                  </li>
												</ul>
												<dl>
													<dt>Hours:</dt>
                                                                                                        <dd><%= (@business.hours || 'n/a').gsub(/;/,'<br/>') %></dd>
												</dl>
											</div>
											<%= image_tag @business.user.logo.url, :alt => 'business-logo' %>
										</div>
                                                                                <ol class="posts">
                                                                                  <%= render :partial => 'business_offer', :collection => @business.offers %>
										</ol>
									</div>
								</div>
							</div>
							<!-- aside -->
							<div class="aside">
								<div class="map-holder">
                                                                  <%= @map.to_html %>
                                                                  <%= @map.div(:width => 270, :height => 180) %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= render :partial => 'common_footer' %>
</body>
</html>
