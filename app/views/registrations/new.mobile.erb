<div data-role="content" data-theme="a">
  <%= form_for :user, :as => :user, :url => registration_path(:user), :html => {"data-ajax" => "false"} do |f| %>
    <h3>Sign up to access our deals</h3>
    <%= link_to "Connect with Facebook", user_omniauth_authorize_path(:facebook), "data-role" => "button", "data-icon" => "facebook", "data-theme" => "b", "data-ajax" => "false" %>
    <h4>or create a Smartvark account</h4>
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email, :placeholder => "we don't spam" %>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password, :placeholder => 'at least 6 characters' %>
    <%= f.label :password_confirmation, "Re-enter password:" %>
    <%= f.password_field :password_confirmation, :placeholder => 'must match above' %>
    <fieldset class="ui-grid-a">
      <div class="ui-block-a">
        <%= f.submit "Sign up", :'data-theme' => 'd' %>
      </div>
      <div class="ui-block-b">
        <a href='#' data-rel="back" data-role="button" data-theme="a">Cancel</a>
      </div>
    </fieldset>
  <% end %>
  <p>by signing up you indicate that you accept our <%= link_to "terms of service", terms_path %> and <%= link_to "privacy policy", privacy_path %></p>
  <p><%= link_to "Already a member? Sign in!", new_user_session_path %></p>
</div><!-- /content -->
