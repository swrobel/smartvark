<div class="popup">
  <% form_for get_user_session, :url => user_session_path do |f| %>
    <fieldset>
      <%= f.text_field :login, :class => 'txt' %>
      <%= f.password_field :password, :class => 'txt' %>
      <%= f.check_box :remember_me %><%= f.label :remember_me %>
      <%= f.submit "", :class => 'sbm' %>
    </fieldset>
  <% end %>
</div>
