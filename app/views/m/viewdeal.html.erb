<div data-role="page">

	<div data-role="header" data-theme="c">
		<h1>Deal Detail</h1>
		<a href="/m/search" data-icon="search-white" data-transition="pop" class="ui-btn-right">Search</a>
	</div><!-- /header -->

	<div data-role="content" data-theme="b">
	  <div class="ui-body">
		  <img src="http://s3.amazonaws.com/smartvark-dev/logos/1/thumb/smartvarklogo.png?1286834065" class="logo" />
                  <h2><%= @offer.lead %></h2>
                  <h3><%= @offer.description %></h3>
                  <h4>Expires <%= @offer.expire_date.try(:strftime, '%m/%d/%Y') %></h3>
                  <%= render :partial => 'business', :locals => { :business => @offer.businesses.first } %>
	    <div data-role="controlgroup" data-type="horizontal" >
			  <%= link_to("+",{ :controller => "welcome", :action => "set_opinion", :offer_id => @offer.id, :liked => true }, :method => :post, :remote => true, "data-role" => "button", "data-icon" => "thumbsup") %>
			  <% if @offer.allow_mobile %>
				<a href="/m/redeem/<%= @offer.id %>" data-role="button">Redeem</a>
			  <% end %>
			  <%= link_to("-",{ :controller => "welcome", :action => "set_opinion", :offer_id => @offer.id, :liked => false }, :method => :post, :remote => true, "data-role" => "button", "data-icon" => "thumbsdown") %>
		  </div>
                  <p><%= @offer.exclusivity_text %></p>
                  <%= link_to "Biz info and other deals", mobile_viewbusiness_path(@offer.businesses.first.id), {"data-role" => "button"} %>
		  <div data-role="collapsible" data-state="collapsed">
		    <h3>Shout about it</h3>
		    <ul data-role="listview" data-inset="true" data-theme="d">
			    <li>
				    <h3>Shout message</h3>
				    <p><strong>Name</strong></p>
				    <p>Location</p>
			    </li>
    		</ul>
    		<textarea cols="40" rows="8" name="textarea" id="textarea"></textarea>
    		<a href="#" data-role="button">Shout!</a>
		  </div>
		</div>
	</div><!-- /content -->
</div><!-- /page -->
